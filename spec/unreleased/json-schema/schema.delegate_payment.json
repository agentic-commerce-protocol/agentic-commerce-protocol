{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/delegate-payment/bundle.schema.json",
  "title": "Delegate Payment \u2014 Schema Bundle",
  "$defs": {
    "Address": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "name": {
          "type": "string",
          "maxLength": 256
        },
        "line_one": {
          "type": "string",
          "maxLength": 60
        },
        "line_two": {
          "type": "string",
          "maxLength": 60
        },
        "city": {
          "type": "string",
          "maxLength": 60
        },
        "state": {
          "type": "string"
        },
        "country": {
          "type": "string",
          "minLength": 2,
          "maxLength": 2,
          "description": "ISO-3166-1 alpha-2"
        },
        "postal_code": {
          "type": "string",
          "maxLength": 20
        }
      },
      "required": [
        "name",
        "line_one",
        "city",
        "state",
        "country",
        "postal_code"
      ]
    },
    "PaymentMethodCrypto": {
      "type": "object",
      "additionalProperties": false,
      "description": "x402-based crypto payment. PSP delegates verification to a facilitator and stores the signed payload until settlement.",
      "properties": {
        "type": {
          "type": "string",
          "const": "crypto"
        },
        "x402_payload": {
          "$ref": "#/$defs/X402PaymentPayload"
        }
      },
      "required": ["type", "x402_payload"]
    },
    "X402PaymentRequirements": {
      "type": "object",
      "description": "x402 PaymentRequirements (accepted).",
      "additionalProperties": false,
      "properties": {
        "scheme": { "type": "string", "description": "Payment scheme (e.g. exact)." },
        "network": { "type": "string", "description": "Network in CAIP-2 format." },
        "amount": { "type": "integer", "description": "Payment amount in atomic token units." },
        "asset": { "type": "string", "description": "Token contract address or asset identifier." },
        "payTo": { "type": "string", "description": "Recipient address." },
        "maxTimeoutSeconds": { "type": "integer", "description": "Maximum time allowed for payment." },
        "extra": { "type": "object", "description": "Scheme-specific data (optional)." }
      },
      "required": ["scheme", "network", "amount", "asset", "payTo", "maxTimeoutSeconds"]
    },
    "X402Authorization": {
      "type": "object",
      "description": "x402 authorization (payload.authorization).",
      "additionalProperties": false,
      "properties": {
        "from": { "type": "string", "description": "Payer's wallet address." },
        "to": { "type": "string", "description": "Recipient's wallet address." },
        "value": { "type": "string", "description": "Payment amount in atomic units." },
        "validAfter": { "type": "string", "description": "Unix timestamp when authorization becomes valid." },
        "validBefore": { "type": "string", "description": "Unix timestamp when authorization expires." },
        "nonce": { "type": "string", "description": "32-byte nonce (hex) for replay protection." }
      },
      "required": ["from", "to", "value", "validAfter", "validBefore", "nonce"]
    },
    "X402Payload": {
      "type": "object",
      "description": "x402 payload (signature and authorization).",
      "additionalProperties": false,
      "properties": {
        "signature": { "type": "string", "description": "EIP-712 or Ed25519 signature." },
        "authorization": { "$ref": "#/$defs/X402Authorization" }
      },
      "required": ["signature", "authorization"]
    },
    "X402PaymentPayload": {
      "type": "object",
      "description": "Signed x402 PaymentPayload (see https://github.com/coinbase/x402).",
      "required": ["x402Version", "accepted", "payload"],
      "properties": {
        "x402Version": { "type": "integer", "description": "Protocol version (must be 2)." },
        "accepted": { "$ref": "#/$defs/X402PaymentRequirements" },
        "payload": { "$ref": "#/$defs/X402Payload" },
        "resource": { "type": "object", "description": "ResourceInfo describing the resource being paid for (optional)." },
        "extensions": { "type": "object", "description": "Protocol extensions (optional)." }
      },
      "additionalProperties": true
    },
    "PaymentMethodCard": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "const": "card"
        },
        "card_number_type": {
          "type": "string",
          "enum": ["fpan", "network_token"]
        },
        "number": {
          "type": "string",
          "description": "network token or fallback fpan value"
        },
        "exp_month": {
          "type": "string",
          "maxLength": 2
        },
        "exp_year": {
          "type": "string",
          "maxLength": 4
        },
        "name": {
          "type": "string"
        },
        "cvc": {
          "type": "string",
          "maxLength": 4
        },
        "cryptogram": {
          "type": "string"
        },
        "eci_value": {
          "type": "string",
          "maxLength": 2
        },
        "checks_performed": {
          "type": "array",
          "items": {
            "type": "string",
            "enum": ["avs", "cvv", "ani", "auth0"]
          }
        },
        "iin": {
          "type": "string",
          "maxLength": 6
        },
        "display_card_funding_type": {
          "type": "string",
          "enum": ["credit", "debit", "prepaid"]
        },
        "display_wallet_type": {
          "type": "string"
        },
        "display_brand": {
          "type": "string"
        },
        "display_last4": {
          "type": "string",
          "maxLength": 4
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": [
        "type",
        "card_number_type",
        "number",
        "display_card_funding_type",
        "metadata"
      ]
    },
    "Allowance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "reason": {
          "type": "string",
          "enum": ["one_time"]
        },
        "max_amount": {
          "type": "integer",
          "description": "Minor units (e.g., $20 -> 2000)"
        },
        "currency": {
          "type": "string",
          "pattern": "^[a-z]{3}$",
          "description": "ISO-4217 lowercase (e.g., usd)"
        },
        "checkout_session_id": {
          "type": "string"
        },
        "merchant_id": {
          "type": "string",
          "maxLength": 256
        },
        "expires_at": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": [
        "reason",
        "max_amount",
        "currency",
        "checkout_session_id",
        "merchant_id",
        "expires_at"
      ]
    },
    "RiskSignal": {
      "type": "object",
      "additionalProperties": false,
      "description": "Risk signal from agent/upstream. type indicates the risk category; score and action guide PSP handling. card_testing = card fraud/testing; crypto_wallet_risk = wallet/replay/amount risk for crypto (e.g. nonce reuse, wallet reputation).",
      "properties": {
        "type": {
          "type": "string",
          "enum": ["card_testing", "crypto_wallet_risk"]
        },
        "score": {
          "type": "integer",
          "description": "Risk score (interpretation is out-of-band)."
        },
        "action": {
          "type": "string",
          "enum": ["blocked", "manual_review", "authorized"],
          "description": "Recommended handling: blocked = reject; manual_review = human review; authorized = proceed."
        }
      },
      "required": ["type", "score", "action"]
    },
    "DelegatePaymentRequest": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "payment_method": {
          "oneOf": [
            { "$ref": "#/$defs/PaymentMethodCard" },
            { "$ref": "#/$defs/PaymentMethodCrypto" }
          ]
        },
        "allowance": {
          "$ref": "#/$defs/Allowance"
        },
        "billing_address": {
          "$ref": "#/$defs/Address"
        },
        "risk_signals": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/$defs/RiskSignal"
          }
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["payment_method", "allowance", "risk_signals", "metadata"]
    },
    "DelegatePaymentResponse": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "description": "Vault token id, e.g., vt_..."
        },
        "created": {
          "type": "string",
          "format": "date-time"
        },
        "metadata": {
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["id", "created", "metadata"]
    },
    "Error": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "invalid_request",
            "rate_limit_exceeded",
            "processing_error",
            "service_unavailable"
          ]
        },
        "code": {
          "type": "string",
          "enum": [
            "invalid_card",
            "duplicate_request",
            "idempotency_conflict",
            "invalid_x402_payload",
            "x402_signature_invalid",
            "x402_expired",
            "x402_nonce_reused",
            "x402_amount_mismatch",
            "x402_network_unsupported",
            "x402_verification_failed",
            "x402_settlement_failed"
          ]
        },
        "message": {
          "type": "string"
        },
        "param": {
          "type": "string",
          "description": "JSONPath of offending field (optional)"
        }
      },
      "required": ["type", "code", "message"]
    }
  }
}
